<div class="card">
  <h3 class="card-header">Create New Post</h3>
  <form class="card-body">
    <form class="form new-post-form">
      <div class="form-group row">
        <label for="post-title" class="form-label">Title</label>
        <input
          type="text"
          id="post-title"
          name="post-title"
          class="form-input form-control"
        />
      </div>
      <div class="form-group row">
        <label for="post-description" class="form-label">Description</label>
        <input
          id="post-description"
          name="content"
          class="form-input form-control"
        />
      </div>
      <p></p>
      <div class="form-group">
        <button
          type="button"
          class="btn btn-primary btn-create-post"
        >Create</button>
        <button
          type="button"
          class="btn btn-primary btn-cancel-post"
        >Cancel</button>
      </div>
    </form>
  </form>
</div>
<script src="/js/create-post.js"></script>