<div class="card">
  <h3 class="card-header">Create New Post</h3>
  <form class="card-body">
    <form class="form new-post-form">
      <div class="form-group row">
        <label for="post-title" class="form-label">Title</label>
        <input
          type="text"
          id="post-title"
          name="post-title"
          class="form-input"
        />
      </div>
      <div class="form-group row">
        <label class="form-label" for="post-description">Description</label>
        <input id="post-description" name="content" class="form-input" />
      </div>
      <div class="form-group">
        <button type="button" class="btn btn-primary btn-create-post">Create</button>
      </div>
    </form>
  </form>
</div>

<script src="/js/create-post.js"></script>