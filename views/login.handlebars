<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>
    <form class="form login-form">
      <div class="form-group row">
        <label for="email-login"><small>Email</small></label>
        <div class="col-sm-6">
          <input class="form-input" type="text" id="email-login" />
        </div>
      </div>
      <div class="form-group row">
        <label for="password-login"><small>Password</small></label>
        <div class="col-sm-6">
         <input class="form-input" type="password" id="password-login" />
        </div>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>

  <div class="col-md-6">
    <h2>Signup</h2>
    <form class="form signup-form">
      <div class="form-group row">
        <label for="name-signup"><small>Name</small></label>
        <div class="col-sm-6">
        <input class="form-input" type="text" id="name-signup" /></div>
      </div>
      <div class="form-group row">
        <label for="email-signup"><small>Email</small></label>
        <div class="col-sm-6">
        <input class="form-input" type="text" id="email-signup" /></div>
      </div>
      <div class="form-group row">
        <label for="password-signup"><small>Password</small></label>
        <div class="col-sm-6">
        <input class="form-input" type="password" id="password-signup" /></div>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>